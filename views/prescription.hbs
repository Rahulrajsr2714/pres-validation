<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <title>Prescription Details</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
  </head>
  <body>
    <div class='container mt-5'>
      <h2 class='mb-4'>Prescription Details</h2>

      <div class='card mb-4'>
        <div class='card-body'>
          <div class="col-md-6">
          <p><strong>Prescription ID:</strong> {{result.id}}</p>
          <p><strong>Patient Name:</strong>
            {{result.patient.firstName}}
            {{result.patient.lastName}}</p>
          <p><strong>Doctor:</strong>
            {{result.patient.doctor.firstName}}
            {{result.patient.doctor.lastName}}</p>
          <p><strong>Date:</strong> {{result.prescribedDate}}</p>
          </div>
          {{!-- <div class="col-md-6">
          <p><strong>Prescription ID:</strong> {{result.id}}</p>
          <p><strong>Patient Name:</strong>
            {{result.patient.firstName}}
            {{result.patient.lastName}}</p>
          <p><strong>Doctor:</strong>
            {{result.patient.doctor.firstName}}
            {{result.patient.doctor.lastName}}</p>
          <p><strong>Date:</strong> {{result.prescribedDate}}</p>
        </div> --}}
      </div>

      <h4>Prescribed Drugs</h4>
      <table class='table table-bordered table-striped'>
        <thead class='table-dark'>
          <tr>
            <th>Serial Number</th>
            <th>Name</th>
            <th>Dosage</th>
            <th>Frequency</th>
            <th>Duration</th>
          </tr>
        </thead>
        <tbody>
          {{#each result.prescriptionDrugs}}
            <tr>
              <td>{{this.drug.serialNumber}}</td>
              <td>{{this.drug.name}}</td>
              <td>{{this.drug.dose}}</td>
              <td>{{this.drug.frequency}}</td>
              <td>{{this.drug.duration}}</td>

            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </body>
</html>